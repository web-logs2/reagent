.item {
  margin: 30rpx 0;
  padding: 0 40rpx;
  display: flex;
  flex-direction: row;
}

.item-img-wrapper {
  width: 200rpx;
  height: 200rpx;
  padding: 14rpx;
  background-color: #fff;
  box-shadow: 2px 6px 15px rgba(0, 0, 0, 0.05);
  border-radius: 3px;
  box-sizing: border-box;
  margin-right: 10px;
}

.item-img {
  width: 100%;
  height: 100%;
}
.title {
  font-size: 12px;
  color: #495566;
}