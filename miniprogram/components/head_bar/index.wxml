<view class="container">
  <view wx:if="{{showBack}}" class="back" bindtap="onBack">
    <view class="iconfont iconarrow-left-bold" />
  </view>
  <text class="title">{{title}}</text>
  <view wx:if="{{showSearch}}" class="search_bar">
    <text class="iconfont iconsearch" />
    <input class="search_input" bindinput="onSearchInput" placeholder="Search" placeholder-class="placeholder" />
  </view>
</view>