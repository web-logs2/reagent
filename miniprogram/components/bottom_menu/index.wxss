@import "../../style/iconfont/iconfont.wxss";
bottom_menu {
  position: fixed;
  bottom: 0;
  left:0;
  width: 100%;
  height: 170rpx;
  overflow: visible;
}

.bg {
  width: 100%;
  height: 284rpx;
  position: absolute;
  left:0;
  bottom:0;
}

.tool-bar {
  height: 100%;
  width: 100%;
  position: absolute;
  bottom:0;
  left:0;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  justify-content:space-between;
}

.tool {
  text-align: center;
  color:#D2D2D2;
  font-size: 10px;
  padding: 20px;
  margin: 0 20px;
}
.tool .iconfont{
  font-size: 50rpx;
}

.tool.active .iconfont{
  color:#58A6FF;
}

.tool.active .tool-text{
  color:#58A6FF;
}

.add {
  width: 116rpx;
  height: 116rpx;
  background-color: #58A6FF;
  border-radius: 58rpx;
  position: absolute;
  bottom: 100rpx;
  left:320rpx;
  align-items: center;
  justify-content: center;
  display: flex;
}
.add .iconfont {
  font-size: 44rpx;
  color:#fff;
}