@import "../../style/base.wxss";
.content {
  flex:1;
  height: 700px;
  background: #FBFDFF;
}
.head {
  height: 344rpx;
  background: linear-gradient(107.16deg, #58A6FF -9.45%, #5ECFEE 85.23%);
}
.type-bar {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top:120rpx;
  margin-bottom:80rpx;
  justify-content: space-around;
  padding: 0 10px;
}
.type-item {
  width: 196rpx;
  height: 145rpx;
  background-color: #fff;
  box-shadow: 4px 6px 19px rgba(141, 141, 141, 0.15);
  border-radius: 3px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  transition: all 0.2s;
}
.type-item .iconfont{
  font-size: 60rpx;
  color: #58A6FF;
}
.type-item-text{
  font-size: 12px;
  color: #6A6F7D;
}
.type-item.active .iconfont {
  color:#fff;
}
.type-item.active .type-item-text{
  color: #fff;
}

.item {
  margin: 30rpx 0;
  padding: 0 40rpx;
  display: flex;
  flex-direction: row;
}

.item-img-wrapper {
  width: 200rpx;
  height: 200rpx;
  padding: 14rpx;
  background-color: #fff;
  box-shadow: 2px 6px 15px rgba(0, 0, 0, 0.05);
  border-radius: 3px;
  box-sizing: border-box;
  margin-right: 10px;
}

.item-img {
  width: 100%;
  height: 100%;
}
.title {
  font-size: 12px;
  color: #495566;
}