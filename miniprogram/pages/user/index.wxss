@import "../../style/base.wxss";

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  margin-top: 90rpx;
}
.name{
  font-size: 23px;
  line-height: 27px;
  color: #FFFFFF;
}

.item-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.item {
  width: 187.5rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.item .iconfont {
  font-size: 50rpx;
  color: #6A6F7D;
}
.item .item-text{
  font-size: 10px;
  line-height: 12px;
  color: #6A6F7D;
  margin-top:2px
}